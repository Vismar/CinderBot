<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<!-- ======================= -->
	<!-- ===== Login data ====== -->
	<!-- ======================= -->
	<LoginData>
		<LoginName></LoginName>         <!-- Nick name of your bot -->
		<LoginOauthKey></LoginOauthKey> <!-- Oauth key which required to login on twitch, should starts with "oauth:" -->
		<LoginChannel></LoginChannel>   <!-- Channel to connect -->
	</LoginData>
	<!-- ======================= -->
	<!-- ==== Config params ==== -->
	<!-- ======================= -->
	<ConfigData>
		<!-- ======================= -->
		<!-- === Currency params === -->
		<!-- ======================= -->
		<Currency>Kappa</Currency>             <!-- Use any emoticon which you like -->
		<CurrencyPerMsg>1</CurrencyPerMsg>     <!-- Set value (integer) which will represent how many currency will be given to user per message -->
		<CurrencyOverTime>1</CurrencyOverTime> <!-- Set value (integer) which will represent how many currency will be fiven to user per specified time-->
		<CurrencyTimer>60000</CurrencyTimer>   <!-- In milliseconds, bigger than 0 -->
		<IgnoreList>
			<!-- Type any user that should be ignored by bot -->
			<!-- For example: <User>nightbot</User> -->
			<User>nightbot</User>       <!-- Chat bot #1 -->
			<User>moobot</User>         <!-- Chat bot #2 -->
			<User>system message</User> <!-- System messages -->
		</IgnoreList>
		<!-- ======================= -->
		<!-- === Covenant params === -->
		<!-- ======================= -->
		<CovJoinPrice>100</CovJoinPrice>      <!-- Any integer number, bigger than 0 -->
		<CovCreatePrice>2000</CovCreatePrice> <!-- Any integer number, bigger than 0 -->
		<!-- ======================= -->
		<!-- ==== System params ==== -->
		<!-- ======================= -->
		<ViewerGraphUpdateTime>10000</ViewerGraphUpdateTime> <!-- In milliseconds, bigger than 0 -->
	</ConfigData>
</Configuration>